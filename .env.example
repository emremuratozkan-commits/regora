# Ã…KRONA Environment Variables Template
# Copy to .env and fill in the values

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=akrona
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=akrona
DATABASE_URL=postgresql://akrona:change_this_password@localhost:5432/akrona

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=change_this_to_a_long_random_string_minimum_32_characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# EXTERNAL APIS
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# FRONTEND
# ===========================================
VITE_API_URL=http://localhost:3001
VITE_SESSION_ENCRYPTION_KEY=change_this_encryption_key

# ===========================================
# MONITORING (Optional)
# ===========================================
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ===========================================
# BACKUP (Optional)
# ===========================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=eu-central-1
# S3_BACKUP_BUCKET=akrona-backups

# ===========================================
# NOTIFICATIONS (Optional)
# ===========================================
# SLACK_WEBHOOK=https://hooks.slack.com/services/xxx/xxx/xxx
