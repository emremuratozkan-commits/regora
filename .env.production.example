# Ã…KRONA Production Environment Variables
# Copy to .env.production and fill in with secure production values
# NEVER commit this file to version control!

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=production

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=akrona_prod
POSTGRES_PASSWORD=USE_A_VERY_STRONG_PASSWORD_HERE
POSTGRES_DB=akrona_production
# DATABASE_URL is constructed automatically in docker-compose

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=USE_A_STRONG_REDIS_PASSWORD

# ===========================================
# AUTHENTICATION
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=GENERATE_A_SECURE_64_CHARACTER_RANDOM_STRING
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# EXTERNAL APIS
# ===========================================
GEMINI_API_KEY=your_production_gemini_api_key

# ===========================================
# FRONTEND BUILD
# ===========================================
VITE_API_URL=https://api.yourdomain.com
VITE_SESSION_ENCRYPTION_KEY=GENERATE_ANOTHER_SECURE_KEY

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=your-org
SENTRY_PROJECT=akrona

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# ===========================================
# BACKUP
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
S3_BACKUP_BUCKET=akrona-backups-production
BACKUP_RETENTION_DAYS=30

# ===========================================
# NOTIFICATIONS
# ===========================================
SLACK_WEBHOOK=https://hooks.slack.com/services/your/webhook/url

# ===========================================
# SSL (if using Let's Encrypt)
# ===========================================
DOMAIN=yourdomain.com
LETSENCRYPT_EMAIL=admin@yourdomain.com
